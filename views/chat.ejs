<% layout('layout/layout') %>
<% block('title', 'Chat room') %>
<% stylesheet('/stylesheets/chat.css') %>
<% stylesheet('//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css') %>
<% script('/vendor/bower_components/socket.io-client/socket.io.js') %>
<% script('/vendor/bower_components/moment/moment.js') %>
<% script('/vendor/bower_components/emojify/emojify.js') %>
<% script('/vendor/bower_components/socketio-file-upload/client.js') %>
<% script('/vendor/bower_components/lodash/dist/lodash.js') %>
<% stylesheet('/vendor/bower_components/emojify/emojify.css') %>
<% script('//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js') %>
<% script('/javascripts/chat.js') %>

<div class="chat-container">
    <div class="users">
        Total users:    <span class="total-count">0</span> <br>
        Auth users:     <span class="auth-count">0</span> <br>
        Guests:         <span class="guests-count">0</span>
    </div>
    <div class="messages"></div>
    <div class="system-messages"></div>
    <div class="tools">
        <div id="message" contenteditable="true">Enter you message here (Ctrl+Enter for submit)</div>
        <div class="additional">
            <i class="fa fa-smile-o smiles"></i>
            <label for="file-upload"><i class="fa fa-paperclip"></i></label>
            <input type="file" id="file-upload" multiple>
            <i class="fa fa-download"></i>
        </div>
        <button id="send-message" class="btn btn-primary btn-lg">Send</button>
    </div>
</div>