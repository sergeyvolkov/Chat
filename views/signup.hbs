<h1>Registration page:</h1>

{{#each message}}
    <div class="alert alert-danger">{{message}}</div>
{{/each}}

<form class="form-horizontal" role="form" method="post">
    <div class="form-group">
        <label for="input-login" class="col-sm-2 control-label">Login</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="input-login" name="login" placeholder="Login"
                   value="some-login">
        </div>
    </div>
    <div class="form-group">
        <label for="input-password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="input-password" name="password" placeholder="Password"
                   value="some-pass">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Sign up</button>
        </div>
    </div>
</form>