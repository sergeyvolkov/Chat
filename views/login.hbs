<h1>Login page</h1>

<form class="form-horizontal" method="post">
    <div class="form-group">
        <label for="input-login" class="col-sm-2 control-label">Login</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="input-login" name="login" placeholder="Login"
                   value="admin">
        </div>
    </div>
    <div class="form-group">
        <label for="input-password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="input-password" name="password" placeholder="Password"
                   value="12345">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Sign up</button>
        </div>
    </div>
</form>